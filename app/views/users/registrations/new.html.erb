<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-6 text-center">会員登録</h2>

  <!-- 通常の会員登録フォーム -->
  <div class="bg-white shadow-md rounded-lg border border-gray-200 px-8 pt-6 pb-6 mb-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :name, "ユーザー名", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mb-1">（<%= @minimum_password_length %>文字以上で入力してください）</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-center">
        <%= f.submit "会員登録", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
      </div>
    <% end %>
  </div>

  <!-- 区切り線 -->
  <div class="relative mb-6">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-slate-50 text-gray-500">または</span>
    </div>
  </div>

  <!-- Googleログインボタン -->
  <div class="bg-white shadow-md rounded-lg border border-gray-200 px-8 py-6 mb-6">
    <a href="/auth/google_oauth2" class="w-full inline-flex justify-center items-center px-4 py-3 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 hover:shadow transition duration-150">
      <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="google logo" class="w-5 h-5 mr-3" loading="lazy">
      <span class="font-medium">Googleで会員登録</span>
    </a>
  </div>

  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
</div>
