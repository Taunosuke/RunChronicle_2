<h2 class="text-2xl font-bold mb-6">アカウント設定の変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
             html: { method: :put, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6 max-w-lg mx-auto space-y-5" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <!-- メールアドレス -->
  <div>
    <%= f.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p class="text-sm text-amber-700 bg-amber-50 border border-amber-200 rounded p-3">
      現在、以下のメールアドレスの確認待ちです：<strong><%= resource.unconfirmed_email %></strong>
    </p>
  <% end %>

  <!-- パスワード（変更する場合のみ入力） -->
  <div>
    <%= f.label :password, "新しいパスワード（任意）", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <p class="text-xs text-gray-500 mb-1">※ 変更しない場合は空欄のままでOKです</p>
    <% if @minimum_password_length %>
      <p class="text-xs text-gray-500 mb-1">（<%= @minimum_password_length %>文字以上）</p>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",
          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- パスワード確認 -->
  <div>
    <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- 現在のパスワード -->
  <div>
    <%= f.label :current_password, "現在のパスワード（確認のため必須）", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.password_field :current_password, autocomplete: "current-password",
          class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- 更新ボタン -->
  <div class="pt-2">
    <%= f.submit "更新する",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>

<!-- 危険エリア：退会 -->
<div class="max-w-lg mx-auto bg-white shadow-md rounded px-8 py-6 border border-red-200">
  <h3 class="text-lg font-semibold text-red-700 mb-3">アカウントの削除</h3>
  <p class="text-sm text-red-700 mb-4">この操作は取り消せません。本当に削除しますか？</p>
  <div>
    <%= button_to "アカウントを削除する",
          registration_path(resource_name),
          method: :delete,
          data: { confirm: "本当にアカウントを削除しますか？" },
          class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </div>
</div>

<div class="max-w-lg mx-auto mt-4 text-center">
  <%= link_to "戻る", (request.referer || root_path),
        class: "inline-block text-slate-700 hover:text-blue-700 underline underline-offset-4" %>
</div>

