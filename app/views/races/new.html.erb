<h1>試合予定の登録</h2>

<%= form_with model: @race, local: true do |f| %>
    <div class="field">
      <%= f.label '大会名'%>
      <%= f.text_field :name,  placeholder: '東京マラソン'  %>
    </div>

    <div class="field">
      <%= f.label '日程' %>
      <%= f.text_field :date, placeholder: '2025-01-01' %>
    </div>

    <div class="actions">
      <%= f.submit '登録' %>
    </div>
   <%= link_to '戻る', home_index_path %>
  <% end %>